<!-- ヘッダーの呼び出し -->
<%= render "layouts/header" %>

<div class="contaniner">

	<!-- 配送先登録フォーム -->
	<div class="row">
		<div class="col-md-offset-2 col-md-2">
			<p>配送先登録/一覧</p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-2 col-md-5">
			<%= form_for(@address) do |f| %>
			    <%= f.label :郵便番号 %>&emsp;<%= f.text_field :postal_code %><br />
				<%= f.label :住所 %>&emsp;&emsp;&emsp;<%= f.text_area :address %><br />
				<%= f.label :宛名 %>&emsp;&emsp;&emsp;<%= f.text_field :name %><br />
				<br>
				<div class="actions">
			    <%= f.submit "登録する", class:"btn btn-success" %>
			  	</div>
		  	<% end %>
		</div>
    </div>
<br>
<br>
	<!-- 配送先一覧　一覧テーブル -->
	<div class="row">
		<div class="col-md-offset-2 col-md-8">
			<table class="table">
			<thead>
				<tr>
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @addresses.each do |address| %>
				<tr>
					<td><%= address.postal_code %></td>
					<td><%= address.address %></td>
					<td><%= address.name %></td>
					<td><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-primary" %>&emsp;<%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger" %></td>
				</tr>
				<% end %>
			</tbody>
			</table>
	    </div>
	</div>


</div>
