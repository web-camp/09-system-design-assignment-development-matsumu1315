<!-- ヘッダーの呼び出し -->
<%= render "layouts/admin_header" %>

<div class="contaniner">
	<div class="row">
		<div class="col-md-offset-2 col-md-2">
			<p><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</p>
		</div>
	</div>

	<!-- 会員詳細情報のテーブル -->
	<div class="row">
		<div class="col-md-offset-1 col-md-6">
			<table class="table table-bordered">
				<tbody>
					<tr>
					    <th class="info col-md-3">顧客ID</th>
						<td><%= @customer.id %></td>
					</tr>
					<tr>
						<th class="info">氏名</th>
						<td><%= @customer.last_name %>&nbsp<%= @customer.first_name %></td>
					</tr>
					<tr>
						<th class="info">フリガナ</th>
						<td><%= @customer.last_name_phonetic %>&nbsp<%= @customer.first_name_phonetic %></td>
					</tr>
					<tr>
						<th class="info">郵便番号</th>
						<td><%= @customer.postal_code %></td>
					</tr>
					<tr>
						<th class="info">住所</th>
						<td><%= @customer.self_address %></td>
					</tr>
					<tr>
						<th class="info">電話番号</th>
						<td><%= @customer.phone_number %></td>
					</tr>
					<tr>
						<th class="info">メールアドレス</th>
						<td><%= @customer.email %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
    <br>
	<div class="row">
		<div class="col-md-offset-1">
			<div class="col-md-1">
			<%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-primary" %>
			</div>
			<div class="col-md-1">
			<%= link_to "注文一覧を見る", "#", class:"btn btn-primary" %>
		    </div>
		</div>
	</div>

</div>





