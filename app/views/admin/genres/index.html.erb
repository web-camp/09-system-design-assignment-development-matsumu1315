<!-- ヘッダーの呼び出し -->
<%= render "layouts/admin_header" %>

<div class="contaniner">

	<!-- 新規ジャンル登録フォーム -->
	<div class="row">
		<div class="col-md-offset-2 col-md-2">
			<p>ジャンル一覧・追加</p>
		</div>
		<%= form_for(@genre,url: {controller: "genres", action: "create" }) do |f| %>
		<div class="col-md-2">
			<%= f.text_field :name %>
		</div>
		<div class="col-md-2">
			<%= f.radio_button :available, :true %> 有効 <%= f.radio_button :available, :false %> 無効
	    </div>
		<div class="col-md-1">
			<div class="actions">
			<div data-turbolinks="false">
		    <p><%= f.submit "追加", class:"btn btn-primary" %></p>
			</div>
		  	</div>
		</div>
		<% end %>
    </div>


	<!-- ジャンル　一覧テーブル -->
	<div class="row">
		<div class="col-md-offset-2 col-md-5">
			<table class="table">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
				<tr>
					<td><%= genre.name %></td>
					<td><% if genre.available? %>
							<p>有効</p>
						<% else %>
							<p>無効</p>
						<% end%>
					</td>
					<td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-primary" %></td>
				</tr>
				<% end %>
			</tbody>
			</table>
	    </div>
	</div>

</div>