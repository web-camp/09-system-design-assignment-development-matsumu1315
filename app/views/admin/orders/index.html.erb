<!-- ヘッダーの呼び出し -->
<%= render "layouts/admin_header" %>

<div class="contain">

	<div class="row">
		<div class="col-md-offset-2">
			<h3>注文履歴一覧</h3>
		</div>
	</div><br>

	<!-- 注文履歴一覧 -->
	<div class="row">
		<div class="col-md-offset-1 col-md-10">
			<table class="table">
				<tbody>
					<tr class="info">
					    <th>購入日時</th>
					    <th>購入者</th>
					    <th>注文個数</th>
					    <th>注文ステータス</th>
					</tr>
					<% @orders.each do |order| %>
					<tr>
						<td><%= link_to admin_order_path(order.id) do %>
							<%= order.created_at %>
							<% end %>
						</td>
						<td><%= order.customer.last_name %><%= order.customer.first_name %></td>
						<td><%= order.order_items.sum(:amount) %></td>
						<td><%= order.status %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>

</div>