<!-- ヘッダーの呼び出し -->
<%= render "layouts/admin_header" %>

<div class ="container">

  <div class ="row">
    <div class="col-xs-offset-3 col-xs-5">
      <span class="sentence_backcolor" >管理者ログイン</span>
    </div>
  </div><br>

  <div class ="row">
    <div class="col-xs-offset-3 col-xs-9">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "35px" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", :size => "35px" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="col-xs-offset-1">
        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-default btn-lg active btn-primary" %>
        </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
