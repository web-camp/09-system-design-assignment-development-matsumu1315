<!-- ヘッダーの呼び出し -->
<%= render "layouts/header" %>

<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-5">
      <span class="sentence_backcolor" >新規会員登録</span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

        <table class="sign_up_form">
          <tr>
              <td><%= f.label :名前 %></td>
              <td><%= f.text_field :last_name, :placeholder => "姓" %></td>
              <td><%= f.text_field :first_name, :placeholder => "名" %></td>
          </tr>

          <tr>
              <td><%= f.label :フリガナ %></td>
              <td><%= f.text_field :last_name_phonetic, :placeholder => "セイ" %></td>
              <td><%= f.text_field :first_name_phonetic, :placeholder => "メイ" %></td>
          </tr>

          <tr>
              <td><%= f.label :メールアドレス %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <td><%= f.label :郵便番号%></td>
            <td><%= f.text_field :postal_code, :placeholder => "ハイフンなし" %></td>
          </tr>

          <tr>
            <td><%= f.label :住所%></td>
            <td><%= f.text_field :self_address, :size => "40px" %></td>
          </tr>

          <tr>
            <td><%= f.label :電話番号%></td>
            <td><%= f.text_field :phone_number, :placeholder => "ハイフンなし" %></td>
          </tr>

          <tr>
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %><% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %></td>
          </tr>

          <tr>
          <td><%= f.label :パスワード確認用 %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class:"btn btn-default btn-lg btn-block active btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>

    <span class="sentence_backcolor">すでに登録済みの方</span>
     <div><%= link_to "こちら", new_session_path(resource_name) %><span>からログインを行なってください。</span>

</div>


