<!-- ヘッダーの呼び出し -->
<%= render "layouts/header" %>

<div class="contain">

	<!-- 注文履歴一覧 -->
	<div class="row">
		<div class="col-md-offset-1 col-md-10">
			<table class="table table-bordered">
				<tbody>
					<tr class="info">
					    <th>注文日</th>
					    <th>配送先</th>
					    <th>注文商品</th>
					    <th>支払い価格</th>
					    <th>ステータス</th>
					    <th>注文詳細</th>
					</tr>
					<% @order.each do |order| %>
					<tr>
						<td><%= order.created_at %></td>
						<td><%= order.postal_code %><br>
							<%= order.address %><br>
							<%= order.name %>
						</td>
						<td>
							<% order.order_items.each do |order_item| %>
							  <%= order_item.item.product_name %>
							<% end %>
						</td>
						<td>¥<%= order.amount_billed %></td>
						<td><%= order.status %></td>
						<td><%= link_to "表示する", order_path(order), class:"btn btn-primary" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>

</div>

